extends base/_login-signup

block loginSignupContent
  h2.heading-quadinary.heading-quadinary--2 Reset Password
  form.form#reset-password-form(action='#')
    .form__group
      label.form__label(for='password')
        span.form__star *
        | Password
      input.form__input#password(type='password' name='password' placeholder='Password' minlength=8 required)

      .form__group
      label.form__label(for='passwordConfirm')
        span.form__star *
        | Confirm Password
      input.form__input#passwordConfirm(type='password' name='passwordConfirm' placeholder='Confirm Password' minlength=8 required)

      .u-display-none 
        input(type='text' name='token' id='token' value=token readonly)

    .form__group
      .form__text
        | By continuing you agree to our&nbsp;
        a.btn.btn--text(href='#') Terms and Condition
        | &nbsp;and&nbsp;
        a.btn.btn--text(href='#') Privacy Policy

    .form__btn-group
      button#reset-password-form-btn.btn.btn--full.btn--round.btn--red.btn--load
        span.btn--load__content Continue
        span.btn--load__load-content
          i.fa.fa-circle-o-notch.fa-spin
          | &nbsp;Loading

  ul.login-signup__extra-list
    li.login-signup__extra-list-item
      | Forgot your password?&nbsp;
      a.btn.btn--text(href='/forgotpassword') Reset Password
    li.login-signup__extra-list-item
      |  Already have an account?&nbsp;
      a.btn.btn--text(href='/login') Login in